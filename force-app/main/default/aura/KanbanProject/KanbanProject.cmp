<aura:component controller="KanbanProjectApexClass" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:lightningQuickAction" access="global">
    <ltng:require styles="{!$Resource.bulma}" />
    <!-- attributes -->
    <!-- project id stored as a string -->
    <!-- Taken in by the backlogTab component-->
    <aura:attribute name="project" type="String" />
    <aura:attribute name="kanbanColumns" type="KanbanColumn__c[]" />
    <aura:attribute name="selectedValue" type="String" />
    <aura:attribute name="kanbanOrder" type="String[]" />
    <aura:attribute name="selectedOrderValue" type="String" />

    <!-- modal attributes -->
    <!-- Stage is the Column Name-->
    <aura:attribute name="stage" type="String"/>

    <!--Boolean values that set the add column and delete column models-->
    <aura:attribute name="isOpenAddColumn" type="boolean" default="false" />
    <aura:attribute name="isOpenDeleteColumn" type="boolean" default="false" />

    <!-- event handlers -->
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"></aura:handler>
    <aura:handler name="droppedOnColumn" event="c:droppedOnColumn" action="{!c.droppedHandler}"></aura:handler>

    <!-- Iterate through list of Related columns-->
    <div class="slds-col columns">
            <aura:iteration items="{!v.kanbanColumns}" var="col" indexVar="i">
                   <c:KanbanColumn  projectId="{!v.project}" columnId="{!col.Id}" title="{!col.Label__c}" />
            </aura:iteration>
            <!-- if theres no columns "No Column Found" Message Displayed-->
            <aura:set attribute="else">
                <div class="demo-only" style="padding:0.5rem;background:#16325c">
                    <div class="slds-text-color_inverse">No Columns found</div>
                </div>
            </aura:set>
    </div>

    <!--Use "slds-m-around_xx-large" class to add standard X-Large padding to the component-->
    <div class="slds-m-around_xx-large">

        <!-- Model for Adding a Column-->
        <!--aura:if displays modal if attribute isOpen is true. -->
        <aura:if isTrue="{!v.isOpenAddColumn}">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
                aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!--  MODAL HEADER START -->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }"
                            alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">
                            Adding Column...
                        </h2>
                    </header>
                    <!-- MODAL BODY Part START-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <!-- User Input for adding a Column Name and the order of the Column-->
                            <lightning:textarea name="status-select" label="Column Name" value="{!v.stage}">
                            </lightning:textarea>
                            <lightning:select name="Order-select" label="Column Order" value="{!v.selectedOrderValue}">
                                <aura:iteration items="{!v.kanbanOrder}" var="order">
                                    <option value="{!order}" text="{!order}"></option>
                                </aura:iteration>
                        </lightning:select>
                    </div>
                          
                    <!-- MODAL FOOTER  Start -->
                    <footer class="slds-modal__footer slds-modal_footer_directional">
                        <lightning:button class="slds-button_brand button" label="Cancel" title="Cancel" onclick="{! c.closeModel }" />
                        <lightning:button class ="slds-button_brand button" label="Save" onclick="{! c.saveColumn }" />
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
            <!-- MODAL END  -->
        </aura:if>

        <!-- Model for Deleting a column -->
        <!--aura:if displays modal if attribute isOpen is true. -->
        <aura:if isTrue="{!v.isOpenDeleteColumn}">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
                aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!--  MODAL HEADER START -->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModelDeleteTheColumn }"
                            alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">
                            Deleting Column...
                        </h2>
                    </header>
                    <!-- MODAL BODY Part START-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <!-- drop down for Columns-->
                        <lightning:select name="status-select" label="Column Name" value="{!v.selectedValue}">
                            <aura:iteration items="{!v.kanbanColumns}" var="col">
                                <option value="{!col.Label__c}" text="{!col.Label__c}"></option>
                            </aura:iteration>
                        </lightning:select>
                    </div>
                          
                    <!-- MODAL FOOTER  Start -->
                    <footer class="slds-modal__footer slds-modal_footer_directional">
                        <lightning:button class="slds-button_brand button" label="Cancel" title="Cancel" onclick="{! c.closeModelDeleteTheColumn }" />
                        <lightning:button class ="slds-button_brand button" label="Delete" onclick="{! c.deleteColumn }" />
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
            <!-- MODAL END  -->
        </aura:if>
    </div>

    <!-- Buttons to add new column and delete a column -->
    <lightning:button variant="success" label="+ Column" title="Success" onclick="{!c.openModel}" />
    <lightning:button variant="Destructive" label="- Column" title="Success" onclick="{!c.openModelDeleteTheColumn}" />
</aura:component>